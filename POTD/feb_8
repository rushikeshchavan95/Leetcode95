class Solution {
public:
    int t[10001];
    
    int minSquares(int n) 
    {
        if(n == 0)
            return 0;
        
        if(t[n] != -1)
            return t[n];
    
        int minCount = INT_MAX;
        for(int i = 1; i*i<=n; i++) 
        {
            minCount = min(minCount, 1 + minSquares(n-i*i));
        }
        
        return t[n] = minCount;
    }
    
    int numSquares(int n) {
        memset(t, -1, sizeof(t));
        
        return minSquares(n);
    }
};
