class Solution {
public:
    int subarraysDivByK(vector<int>& nums, int k) {
        int n       = nums.size();
        int count   = 0;
        for(int i = 0; i<n; i++) 
        {
            for(int j = i; j<n; j++) 
            {
                int sum = accumulate(begin(nums)+i, begin(nums)+j+1, 0);
                if(sum%k == 0) {
                    count++;
                }
            }
        }
        return count;
    }
};
